<Window x:Class="WpfApp1_Lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 7"
        Height="600"
        Width="900">

    <!-- РЕСУРС -->
    <Window.Resources>
        <SolidColorBrush x:Key="RectBrush" Color="LightBlue"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ПАНЕЛЬ КНОПОК -->
        <StackPanel Grid.Column="0" Margin="10">
            <Button Content="Повернуть"
                    Margin="5"
                    Click="Rotate_Click"/>
            <Button Content="Сдвинуть"
                    Margin="5"
                    Click="Move_Click"/>
        </StackPanel>

        <!-- CANVAS -->
        <Canvas Grid.Column="1"
                Background="LightGray">

            <!-- RECTANGLE -->
            <Rectangle x:Name="rect"
                       Width="200"
                       Height="120"
                       Canvas.Left="50"
                       Canvas.Top="50"
                       Stroke="Black"
                       StrokeThickness="3"
                       StrokeDashArray="5 2"
                       Fill="{StaticResource RectBrush}"/>

            <!-- POLYGON -->
            <Polygon Points="350,50 450,150 400,250 300,200"
                     Stroke="DarkRed"
                     StrokeThickness="3"
                     StrokeLineJoin="Round">
                <Polygon.Fill>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1">
                        <GradientStop Color="Yellow" Offset="0"/>
                        <GradientStop Color="Orange" Offset="1"/>
                    </LinearGradientBrush>
                </Polygon.Fill>
            </Polygon>

            <!-- PATH + GEOMETRYGROUP -->
            <Path Stroke="Black"
                  StrokeThickness="2"
                  Fill="LightGreen">
                <Path.Data>
                    <GeometryGroup>
                        <EllipseGeometry Center="550,150"
                                         RadiusX="40"
                                         RadiusY="40"/>
                        <RectangleGeometry Rect="510,190,80,60"/>
                    </GeometryGroup>
                </Path.Data>
            </Path>

        </Canvas>
    </Grid>
</Window>
